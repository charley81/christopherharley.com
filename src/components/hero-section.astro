---
const text = 'I design and build websites'
const title = text.split(' ')
---

<section aria-label="hero-section">
  <h3 class="mt-4 text-2xl text-slate-700 md:mt-8">
    UX ENGINEER | CHARLOTTE, NC
  </h3>
  <h1 class="mt-40 text-6xl leading-tight font-bold xl:text-8xl">
    {
      title.map((word, index) => (
        <span
          class="animate-fade-in-word inline-block opacity-0"
          style={`animation-delay: ${index * 0.2}s`}
        >
          {word}&nbsp;
        </span>
      ))
    }
  </h1>
</section>

<style>
  @keyframes fadeInWord {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-word {
    animation: fadeInWord 0.1s cubic-bezier(0, 0.55, 0.45, 1) forwards;
  }
</style>
