---
interface Props {
  label: string
  name: string
  placeholder?: string
  required: boolean
  rows?: number
}

const { label, name, placeholder, required = true, rows = 4 } = Astro.props
---

<div class="mb-4">
  <label for={name} class="text-dark block text-sm font-medium">
    {label}
  </label>
  <textarea
    id={name}
    name={name}
    placeholder={placeholder}
    required={required}
    rows={rows}
    class="focus:border-primary placeholder-dark-grey mt-1 block w-full rounded-(--border-radius) border border-light-grey px-3 py-2 shadow-sm focus:ring-primary focus:outline-none sm:text-sm"
  ></textarea>
</div>
