---
import FormField from './form-field.astro'

interface Props {
  label: string
  name: string
  type: 'text' | 'email' | 'password' | 'number'
  placeholder: string
  required: boolean
}

const { label, name, type, placeholder, required = true } = Astro.props
---

<FormField label={label} name={name}>
  <input
    type={type}
    id={name}
    name={name}
    placeholder={placeholder}
    required={required}
    class="mt-1 block w-full rounded-(--border-radius) border border-light-grey px-3 py-2 placeholder-dark-grey shadow-sm focus:border-primary focus:ring-primary focus:outline-none sm:text-sm"
  />
</FormField>
