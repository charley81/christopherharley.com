---
interface Props {
  label: string
  name: string
  type: 'text' | 'email' | 'password' | 'number'
  placeholder: string
  required: boolean
}

const { label, name, type, placeholder, required = true } = Astro.props
---

<div class="mb-4">
  <label for="name" class="block text-sm font-medium">
    {required && <span class="text-red-500">*</span>}
  </label>
  <input
    type={type}
    id={name}
    placeholder={placeholder}
    required={required}
    class="focu:boder-blue-500 mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:ring-blue-500 focus:outline-none sm:text-sm"
  />
</div>
