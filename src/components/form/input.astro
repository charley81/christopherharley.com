---
interface Props {
  label: string
  name: string
  type: 'text' | 'email' | 'password' | 'number'
  placeholder: string
  required: boolean
}

const { label, name, type, placeholder, required = true } = Astro.props
---

<div class="mb-4">
  <label for={name} class="text-dark block text-sm font-medium">
    {label}
  </label>
  <input
    type={type}
    id={name}
    name={name}
    placeholder={placeholder}
    required={required}
    class="focus:border-primary placeholder-dark-grey mt-1 block w-full rounded-(--border-radius) border border-light-grey px-3 py-2 shadow-sm focus:ring-primary focus:outline-none sm:text-sm"
  />
</div>
