---
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

type Props = {
  project: CollectionEntry<'projects'>
  index: number
}
const { project, index } = Astro.props as Props
const { image, title, description, tags, projectUrl } = project.data
---

<div
  class:list={[
    'image-container grid gap-4 text-base lg:flex lg:items-center',
    { 'lg:flex-row-reverse': index % 2 !== 0 },
  ]}
>
  <div class="lg:w-1/2">
    <Image
      src={image}
      alt={title}
      class="block h-full w-full rounded-md border object-cover"
    />
  </div>
  <div class="flex flex-col gap-y-4 lg:w-1/2">
    <p class="leading-relaxed text-dark-grey">{description}</p>
    <ul class="flex gap-2 font-bold">
      {
        tags.map((tag, index) => (
          <>
            <li>{tag}</li>
            {index < tags.length - 1 && <span>|</span>}
          </>
        ))
      }
    </ul>
    <button class="flex font-bold">
      <a
        href={projectUrl}
        class="text-primary underline transition-all hover:text-primary-light"
      >
        VIEW SITE â†’
      </a>
    </button>
  </div>
</div>
